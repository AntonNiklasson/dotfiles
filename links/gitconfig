[core]
  autocrlf = input
  whitespace = fix,space-before-tab,tab-in-indent,trailing-space
  excludesfile = ~/.gitignore
  ignorecase = false
  pager = diff-so-fancy | less --tabs=4 -RFX
[apply]
  whitespace = fix
[alias]
  statsu = status
  psuh = push
  unstage = reset HEAD
  prettylog = log --pretty=format:'%Cblue%h%Creset %Cgreen%an%Creset %s %Cgreen(%cr)%Creset' --date=relative
  prs = pr list --format='%sC%>(8)%i%Creset %t%  l%n       %Cblue%  U%n%n'
[branch "master"]
  remote = origin
  merge = refs/heads/master
[color]
  ui = auto
  diff = auto
  status = auto
  branch = auto
[help]
  autocorrect = 1
[pull]
  rebase = preserve
[merge]
  log = true
[rerere]
  enabled = 1
[url "git@github.com:"]
  insteadOf = "gh:"
  pushInsteadOf = "github:"
  pushInsteadOf = "git://github.com/"
[url "git://github.com/"]
  insteadOf = "github:"
[url "git@gist.github.com:"]
  insteadOf = "gst:"
  pushInsteadOf = "gist:"
  pushInsteadOf = "git://gist.github.com/"
