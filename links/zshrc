export ZSH="$HOME/.oh-my-zsh"
ZSH_THEME="fwalch"

plugins=(git yarn z)

source $ZSH/oh-my-zsh.sh

export HISTCONTROL=ignoredups
export VISUAL='vim'
export EDITOR=$VISUAL

export PATH=$PATH:/usr/local/bin
export PATH=$PATH:/usr/bin
export PATH=$PATH:/usr/local/lib
export PATH=$PATH:~/.npm/bin
export PATH=$PATH:~/.dotfiles/scripts
export PATH=$PATH:./node_modules/.bin
export PATH=$PATH:$GOPATH/bin
export PATH=$PATH:/usr/local/opt/ruby/bin
export PATH=$PATH:$HOME/.rvm/bin

alias ga='git add'
alias gb='git branch'
alias gba='git branch -a'
alias gc='git commit'
alias gcm='git commit -m'
alias gco='git checkout'
alias gd='git diff'
alias gdc='git diff --cached'
alias gf='git fetch'
alias git=hub
alias gl='git log --pretty=format:"%Cblue%h%Creset %Cgreen%an%Creset %s %Cgreen(%cr)%Creset" --date=relative'
alias gm='git merge'
alias gp='git push'
alias gpf='git push --force-with-lease'
alias gpl='git pull'
alias gpnv='git push --no-verify'
alias gpsu='git push --set-upstream origin'
alias gr='git rebase'
alias gri='git rebase -i'
alias gs='git status'
alias gst='git stash'
alias ll='gls -lAFh --color --group-directories-first'
alias l='ll'
#alias mobcommit="git commit -m \"fixup: mobcommit :fire:\" --no-verify && git push --no-verify"
#alias pulls='hub pr list --format="%sC%>(8)%i%Creset %t%  l%n       %Cblue%  U%n%n"'
alias docker-stop-all-containers='docker stop $(docker ps -q) || true'
alias docker-remove-all-containers='docker rm $(docker ps -a -q) || true'
alias docker-remove-all-images='docker rmi $(docker images -q) || true'
alias vimrc='vim ~/.vimrc'
alias zshrc='vim ~/.zshrc'
alias zshrcs='source ~/.zshrc'
alias dotfiles='vim ~/.dotfiles'
alias notes='cd ~/Dropbox/notes && vim .'
alias t='tmux'
alias tn='tmux new-session -t'
alias tl='tmux ls'
alias ta='tmux attach -t'

# Klarna
if type "direnv" > /dev/null; then
	eval "$(direnv hook $SHELL)"
fi

# NVM
export NVM_DIR="$HOME/.nvm"
[ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh"  # This loads nvm
[ -s "$NVM_DIR/bash_completion" ] && \. "$NVM_DIR/bash_completion"  # This loads nvm bash_completion
