
call plug#begin('~/.vim/plugged')
Plug 'vim-airline/vim-airline'
Plug 'vim-airline/vim-airline-themes'
Plug 'airblade/vim-gitgutter'
Plug 'kien/ctrlp.vim'
Plug 'mileszs/ack.vim'
Plug 'nathanaelkane/vim-indent-guides'
Plug 'nightsense/cosmic_latte'
Plug 'pangloss/vim-javascript'
Plug 'sheerun/vim-polyglot'
Plug 'scrooloose/nerdcommenter'
Plug 'scrooloose/nerdtree'
Plug 'Xuyuanp/nerdtree-git-plugin'
Plug 'styled-components/vim-styled-components', { 'branch': 'main' }
Plug 'tpope/vim-fugitive'
Plug 'w0rp/ale'
call plug#end()

filetype plugin indent on

" Colors
syntax enable
set background=dark
set t_Co=256
colorscheme cosmic_latte

" Leader commands
let mapleader = " "
nnoremap <Leader>ss :split<cr>
nnoremap <Leader>sv :vsplit<cr>
nnoremap <Leader>, :tabfind $MYVIMRC<cr>
nnoremap <Leader>f :NERDTreeToggle<cr>
nnoremap <Leader>l :noh<cr>:<backspace>
nnoremap <Leader>t :tabe<cr>
nnoremap <Leader>i :IndentGuidesToggle<cr>:set list!<cr>:<backspace>
nnoremap <Leader>p :ALEFix<cr>:<backspace>

" Snippets, all under <Leader>j
nnoremap <Leader>jl oconsole.log(JSON.stringify(<++>, null, 2));<Esc>

" Move between splits with ctrl+{h,j,k,l}
nnoremap <c-h> <c-w>h
nnoremap <c-j> <c-w>j
nnoremap <c-k> <c-w>k
nnoremap <c-l> <c-w>l

" Remaps for the lazy
nnoremap ; :
nnoremap :q :close
inoremap jj <Esc>

" Ctrl+P
let g:ctrlp_show_hidden = 1
let g:ctrlp_custom_ignore = {
  \ 'dir':  '\v[\/](node_modules|.git|vendor|.cache|.next)$',
  \ 'file': '\v\.(exe|so|dll)$',
  \ 'link': '',
  \ }

" NERDTree
let g:NERDTreeIgnore = ['\.aux$', '\~$']
let NERDTreeShowHidden = 1
let g:NERDTreeWinSize=40

" Airline
let g:airline_powerline_fonts = 1

" Ale
let g:ale_linters_explicit = 1
let g:ale_fix_on_save = 0
let g:ale_linters = {
\   'javascript': ['eslint']
\}
let b:ale_linters_aliases = { 'javascript.jsx': ['css', 'javascript'] }
let g:ale_fixers = {
\   'javascript': ['prettier'],
\   'javascript.jsx': ['prettier'],
\   'css': ['prettier'],
\   'scss': ['prettier']
\}

" NERDCommenter
let g:NERDSpaceDelims = 1
let g:NERDCommentEmptyLines = 1
let g:NERDTrimTrailingWhitespace = 1
let g:NERDToggleCheckAllLines = 1

" Indent Guides
let g:indent_guides_enable_on_vim_startup=0

" File associations
autocmd BufNewFile,BufRead .babelrc setlocal ft=json
autocmd BufRead,BufNewFile *.blade.php set filetype=html


set encoding=utf-8
set ignorecase
set backspace=indent,eol,start
set mouse=a
set hlsearch
set cursorline

set splitbelow
set splitright

set foldlevelstart=20
set foldmethod=indent

set number
set shiftwidth=2
set softtabstop=2
set tabstop=2
set noexpandtab

set nolist

set noswapfile
set nowrap
