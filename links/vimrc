filetype off

call plug#begin('~/.vim/plugged')
Plug 'kien/ctrlp.vim'
Plug 'scrooloose/nerdtree'
Plug 'morhetz/gruvbox'
Plug 'wavded/vim-stylus'
call plug#end()

filetype plugin indent on

" Colors
syntax enable
set background=dark
colorscheme gruvbox

" Leader commands
let mapleader = ","
nnoremap <Leader>ss :split<cr>
nnoremap <Leader>sv :vsplit<cr>
nnoremap <Leader>v 	:tabfind $MYVIMRC<cr>
nnoremap <Leader>f 	:NERDTreeToggle<cr>

" Move between splits with ctrl+{h,j,k,l}
nnoremap <c-h> <c-w>h
nnoremap <c-j> <c-w>j
nnoremap <c-k> <c-w>k
nnoremap <c-l> <c-w>l

" Remaps for the lazy
nnoremap ; :
nnoremap :q :close

" Text Rendering
set guifont=Source\ Code\ Pro:h14
set linespace=5

" Ctrl+P
let g:ctrlp_show_hidden = 1
let g:ctrlp_custom_ignore = {
  \ 'dir':  '\v[\/](node_modules|.git)$',
  \ 'file': '\v\.(exe|so|dll)$',
  \ 'link': '',
  \ }

" NERDTree
let g:NERDTreeIgnore = ['\.aux$', '\~$']
let g:NERDTreeWinSize = 50
let NERDTreeShowHidden = 1

" Neoformat
autocmd BufWritePre *.js Neoformat


set expandtab
set foldcolumn=1
set hlsearch
set mouse=a
set number
set shiftwidth=2
set softtabstop=2
set splitbelow
set splitright
