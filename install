#! /bin/bash


# Backup any existing link files.
mv ~/.vimrc ~/.vimrc.backup
mv ~/.gitignore ~/.gitignore.backup
mv ~/.gitconfig ~/.gitconfig.backup
ln -fs ~/.dotfiles/links/vimrc ~/.vimrc
ln -fs ~/.dotfiles/links/gitignore ~/.gitignore
ln -fs ~/.dotfiles/links/gitconfig ~/.gitconfig


# Link ~/.vim
if [ -d ~/.vim ]; then
	mv ~/.vim ~/.vim.backup
fi
ln -s ~/.dotfiles/vim ~/.vim


# Link either .bashrc or .bash_profile.
if [[ $OSTYPE == darwin* ]]; then
	mv ~/.bash_profile ~/.bash_profile.backup
	ln -s ~/.dotfiles/links/bashrc ~/.bash_profile
	source ~/.bash_profile
else
	mv ~/.bashrc ~/.bashrc.backup
	ln -s ~/.dotfiles/links/bashrc ~/.bashrc
	source ~/.bashrc
fi
