# The flags are a bit different on OSX.
#alias ll='ls -lAhp --color --group-directories-first'

# Remove the dock reveal delay.
defaults write com.apple.Dock autohide-delay -float 0

# Speed up mission control animations.
defaults write com.apple.dock expose-animation-duration -float 0.1

# Highlight running apps in the Dock
defaults write com.apple.Dock showhidden -bool YES

# Always show hidden files.
# defaults write com.apple.finder AppleShowAllFiles -bool YES

# Store screenshots in a specific location.
defaults write com.apple.screencapture location ~/Dropbox/Public/screenshots

# Restart the Dock to apply changes.
killall Dock
