alias ll='ls -lh'
alias la='ll -a'
alias ..='cd ..'
alias ...='cd ../..'
alias mkdir='mkdir -p'
alias pwd='pwd -P'

alias code='cd ~/code'
alias dotfiles='cd ~/.dotfiles/link && la'
alias t48='cd ~/code/TNM048'

alias g='git'
alias ga='g add'
alias gb='g branch'
alias gba='gb -a'
alias gc='g commit'
alias gcm='gc -m'
alias gco='g checkout'
alias gd='g diff'
alias gdc='gd --cached'
alias gl='g log'
alias gm='g merge'
alias gs='g status'
alias gf='g fetch'
alias push='g push'
alias pull='g pull'
alias pushdeploy='git push origin master && envoy run deploy'

alias pyserv='python -m http.server'

alias digitalocean='ssh root@5.101.107.248'
alias pi='ssh pi@192.168.1.123'
alias vm='ssh vagrant@127.0.0.1 -p 2222'

alias vimrc='vim ~/.vimrc'
alias bashrc='vim ~/.bashrc'
alias aliases='vim ~/.dotfiles/aliases'
alias paths='vim ~/.dotfiles/paths'
alias hosts='sudo vim /etc/hosts'

# Create and step into directory
MkdirAndCd() {
	mkdir $1 && cd $1
}
alias md=MkdirAndCd;

# Open anything
function o {
	nohup xdg-open "$1" > /dev/null 2>&1 &
}
export -f o

# Copy file content to clipboard
copyFileToClipboard() {
	cat $1 | xclip -sel clip
}
alias copy=copyFileToClipboard;

# Always use NeoVim instead of Vim
alias vim='nvim'
