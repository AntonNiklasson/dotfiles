# Setup the keyboard configuration.
setxkbmap -layout 'us,se' -option 'grp:rctrl_rshift_toggle' -option 'grp:switch' -option 'caps:escape'

# Specific flags for the ll alias.
alias ll='ls -lhp --color --group-directories-first'

# Link .vimrc to neovim.
if ! [ -L ~/.config/nvim/init.vim ]; then
	ln -s ~/.vimrc ~/.config/nvim/init.vim
fi

# Open anything.
function open {
	nohup xdg-open "$1" > /dev/null 2>&1 &
}
export -f open
